<p><id="notice"><%= notice %></p>

<h1>Grades</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Grade</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.date %>
        <td><%= link_to grade.description, grade_path(grade.id) %></td>
        <td><%= grade.score %></td>
      </tr>
    <% end %>
    <td><%= link_to '<button type="button">Add grade for this student</button>' .html_safe, new_grade_path %></td>
    <td><%= link_to '<button type="button">Back</button>' .html_safe,grades_path %></td>
  </tbody>
</table>
